{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["DOM", "DOM.Iterable", "ES2020"],
		"module": "ESNext",
		"moduleResolution": "Node",
		"jsx": "react-jsx",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"baseUrl": "./src",
		"paths": {
			"@background/*": ["background/*"],
			"@content/*": ["content/*"],
			"@popup/*": ["popup/*"],
			"@shared/*": ["shared/*"]
		},
		"outDir": "./dist" 
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx"
	],
	"exclude": [
		"node_modules",
		"dist",
		"tests__",
		"scripts/package-extension.js"
	]
}
