{
  "manifest_version": 3,
  "name": "ReWatch - Streaming Progress Tracker",
  "short_name": "ReWatch",
  "version": "3.0.0",
  "description": "ReWatch tracks viewing progress on Netflix, Disney+, HBO Max, HiAnime, Tubi, Crunchyroll, Plex, and Filmzie with automatic metadata detection.",
  "permissions": [
    "storage",
    "tabs",
    "downloads"
  ],
  "host_permissions": [
    "https://www.netflix.com/*",
    "https://*.netflix.com/*",
    "https://disneyplus.com/*",
    "https://*.disneyplus.com/*",
    "https://play.max.com/*",
    "https://hbomax.com/*",
    "https://*.hbomax.com/*",
    "https://hianime.to/*",
    "https://*.hianime.to/*",
    "https://aniwatch.to/*",
    "https://*.aniwatch.to/*",
    "https://megacloud.blog/*",
    "https://*.megacloud.blog/*",
    "https://tubitv.com/*",
    "https://*.tubitv.com/*",
    "https://www.crunchyroll.com/*",
    "https://*.crunchyroll.com/*",
    "https://app.plex.tv/*",
    "https://*.plex.tv/*",
    "https://filmzie.com/*",
    "https://*.filmzie.com/*",
    "https://brocoflix.lat/*",
    "https://*.brocoflix.lat/*",
    "https://vidlink.pro/*",
    "https://*.vidlink.pro/*"
    ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.netflix.com/*",
        "https://*.netflix.com/*",
        "https://disneyplus.com/*",
        "https://*.disneyplus.com/*",
        "https://play.max.com/*",
        "https://hbomax.com/*",
        "https://*.hbomax.com/*",
        "https://hianime.to/*",
        "https://*.hianime.to/*",
        "https://aniwatch.to/*",
        "https://*.aniwatch.to/*",
        "https://megacloud.blog/*",
        "https://*.megacloud.blog/*",
        "https://tubitv.com/*",
        "https://*.tubitv.com/*",
        "https://www.crunchyroll.com/*",
        "https://*.crunchyroll.com/*",
        "https://app.plex.tv/*",
        "https://*.plex.tv/*",
        "https://filmzie.com/*",
        "https://*.filmzie.com/*",
        "https://brocoflix.lat/*",
        "https://*.brocoflix.lat/*",
        "https://vidlink.pro/*",
        "https://*.vidlink.pro/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
