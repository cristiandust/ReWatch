{
  "manifest_version": 3,
  "name": "ReWatch - Streaming Progress Tracker",
  "short_name": "ReWatch",
  "version": "2.1.0",
  "description": "ReWatch tracks viewing progress on Netflix, Disney+, HBO Max, HiAnime, YouTube, Tubi, Pluto TV, Crunchyroll, The Roku Channel, Plex, and Filmzie with automatic metadata detection.",
  "permissions": [
    "storage",
    "tabs",
    "downloads"
  ],
  "host_permissions": [
    "https://www.netflix.com/*",
    "https://*.netflix.com/*",
    "https://disneyplus.com/*",
    "https://*.disneyplus.com/*",
    "https://play.max.com/*",
    "https://hbomax.com/*",
    "https://*.hbomax.com/*",
    "https://hianime.to/*",
    "https://*.hianime.to/*",
    "https://aniwatch.to/*",
    "https://*.aniwatch.to/*",
    "https://megacloud.blog/*",
    "https://*.megacloud.blog/*",
    "https://www.youtube.com/*",
    "https://*.youtube.com/*",
    "https://*.youtube-nocookie.com/*",
    "https://tubitv.com/*",
    "https://*.tubitv.com/*",
    "https://pluto.tv/*",
    "https://*.pluto.tv/*",
    "https://www.crunchyroll.com/*",
    "https://*.crunchyroll.com/*",
    "https://therokuchannel.roku.com/*",
    "https://app.plex.tv/*",
    "https://*.plex.tv/*",
    "https://filmzie.com/*",
    "https://*.filmzie.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.netflix.com/*",
        "https://*.netflix.com/*",
        "https://disneyplus.com/*",
        "https://*.disneyplus.com/*",
        "https://play.max.com/*",
        "https://hbomax.com/*",
        "https://*.hbomax.com/*",
        "https://hianime.to/*",
        "https://*.hianime.to/*",
        "https://aniwatch.to/*",
        "https://*.aniwatch.to/*",
        "https://megacloud.blog/*",
        "https://*.megacloud.blog/*",
        "https://www.youtube.com/*",
        "https://*.youtube.com/*",
        "https://*.youtube-nocookie.com/*",
        "https://tubitv.com/*",
        "https://*.tubitv.com/*",
        "https://pluto.tv/*",
        "https://*.pluto.tv/*",
        "https://www.crunchyroll.com/*",
        "https://*.crunchyroll.com/*",
        "https://therokuchannel.roku.com/*",
        "https://app.plex.tv/*",
        "https://*.plex.tv/*",
        "https://filmzie.com/*",
        "https://*.filmzie.com/*"
      ],
      "js": [
        "content/core/namespace.js",
        "content/core/logging.js",
        "content/core/constants.js",
        "content/core/dom.js",
        "content/core/title.js",
        "content/core/platform-registry.js",
        "content/core/iframe-proxy.js",
        "content/core/parent-broadcast.js",
        "content/platform-detectors/base.js",
        "content/platform-detectors/hbo-max.js",
        "content/platform-detectors/disney-plus.js",
        "content/platform-detectors/hianime.js",
        "content/platform-detectors/netflix.js",
        "content/platform-detectors/youtube.js",
        "content/platform-detectors/tubi.js",
        "content/platform-detectors/pluto.js",
        "content/platform-detectors/crunchyroll.js",
        "content/platform-detectors/roku-channel.js",
        "content/platform-detectors/plex.js",
        "content/platform-detectors/filmzie.js",
        "content/video-tracker/tracker.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
